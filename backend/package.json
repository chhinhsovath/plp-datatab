{
  "name": "datatab-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:integration": "vitest --run src/test/integration/",
    "test:stats": "vitest --run src/test/statistical-validation.test.ts",
    "test:load": "vitest --run src/test/load-testing.test.ts",
    "test:security": "vitest --run src/test/security.test.ts src/test/penetration.test.ts",
    "test:api-docs": "vitest --run src/test/api-documentation.test.ts",
    "test:migrations": "vitest --run src/test/database-migrations.test.ts",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "db:setup": "tsx scripts/setup-database.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "security:validate": "tsx scripts/validate-security-config.ts",
    "security:check": "npm run test:security && npm run security:validate"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "prisma": "^5.2.0",
    "redis": "^4.6.8",
    "simple-statistics": "^7.8.3",
    "socket.io": "^4.7.2",
    "xlsx": "^0.18.5",
    "zod": "^3.22.2",
    "puppeteer": "^21.5.0",
    "handlebars": "^4.7.8",
    "docx": "^8.5.0",
    "marked": "^9.1.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/supertest": "^2.0.12",
    "@types/marked": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "tsx": "^3.12.7",
    "typescript": "^5.0.2",
    "vitest": "^0.34.0"
  }
}